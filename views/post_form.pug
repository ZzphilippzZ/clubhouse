extends layout

block content

	div.d-flex.justify-content-center.post-form
		form(method='POST' action='')
			div.form-group.form-row
				label.col-sm-4.col-form-label.col-form-label-sm(for='title') Title:
				div.col-sm-8
					input#username.form-control.form-control-sm(type='text' placeholder='Title' name='title' required='true')
			div.form-group.form-row
				label.col-sm-4.col-form-label.col-form-label-sm(for='body') Body:
				div.col-sm-8
					input#password.form-control.form-control-sm(type='text' placeholder='Body' name='body' required='true')

			button.btn.btn-sm.btn-primary.btn-block(type='submit') Post 
