extends layout

block content

	div.d-flex.justify-content-center.signin-form
		form(method='POST' action='')
			div.form-group.form-row
				label.col-sm-4.col-form-label.col-form-label-sm(for='username') Username:
				div.col-sm-8
					input#username.form-control.form-control-sm(type='text' placeholder='Username' name='username' required='true')
			div.form-group.form-row
				label.col-sm-4.col-form-label.col-form-label-sm(for='password') Password:
				div.col-sm-8
					input#password.form-control.form-control-sm(type='password' placeholder='Password' name='password' required='true')

			button.btn.btn-sm.btn-primary.btn-block(type='submit') Sign In
			p or 
				a(href='../sign-up') Sign Up
